# 13. Distribute the revenue according to the order of appearance in a movie.
# Assume that the i-th actor contributes twice as much as the (i+1)-th actor to the revenue.

mv_norm.rename(columns={'id':'movie_id'}, inplace=True)
mv_norm_actors = cast.merge(right = mv_norm[['movie_id', 'original_title','revenue']], on = 'movie_id')


mv_norm_actors["order"] = 1
mv_norm_actors["distribute_revenue"] = mv_norm_actors["revenue"] / mv_norm_actors["order"]
mv_norm_actors



cast.set_index(["movie_id","title"])


