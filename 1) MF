# 1. For each movie, compute the number of cast members

cast = normalize_table("title", "movie_id", cr, "cast")
cast.rename(columns={'name':'actor_name'}, inplace=True)
actors_each_movie = cast.groupby(by = ['movie_id','title'], as_index = False).size().to_frame().reset_index().rename(columns = {0:'Number of actors'})
actors_each_movie


# (esempio) interrogare il dataset: quanti attori per il film Avatar? 

cast[cast['title']=='Avatar'].groupby(by='title').size() 


# (esempio) interrogare il dataset: quanti attori per il film Unforgiven? 

cast[cast['title']=='Unforgiven'].groupby(by='title').size()
